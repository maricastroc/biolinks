{
  "compilerOptions": {
      "allowJs": true,
      "module": "ESNext",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "strict": true,
      "isolatedModules": true,
      "target": "ESNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "skipLibCheck": true,
      "paths": {
          "@/*": ["./resources/js/*"]
      }
  },
  "include": [
      "resources/js/**/*.ts",
      "resources/js/**/*.tsx",
      "resources/js/**/*.d.ts",
      "declarations.d.ts",
      "tailwind.config.js",
      ".eslintrc.cjs",
      "vite.config.js",
      "cypress.config.ts"
  ]
}
